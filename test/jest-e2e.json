{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@prisma/(.*)$": "<rootDir>/src/prisma/$1",
    "^@utils/(.*)$": "<rootDir>/src/utils/$1"
  }
}
